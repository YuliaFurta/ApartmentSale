        xmlns:local="clr-namespace:ApartmentSale.Views"
        mc:Ignorable="d"
        Title="ConfirmDeleteWindow" Height="163.919" Width="300">
    <Grid>
        <Button x:Name="btnDelete" Content="Yes" Background="Transparent" BorderBrush="#C2185B" Foreground="#C2185B" FontSize="16px" HorizontalAlignment="Left" Margin="22,74,0,0" VerticalAlignment="Top" Width="114" Click="btnDelete_Click" Height="35"/>
